rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    // Images anywhere under the user's folder (posts images, thumbnails, etc.)
    function isImage() {
      return request.resource != null &&
             request.resource.contentType.matches('image/.*');
    }
    function isUnder10MB() { return request.resource.size < 10 * 1024 * 1024; }

    match /users/{uid}/{allPaths=**} {
      allow read, list: if isOwner(uid);
      allow write: if isOwner(uid) && isImage() && isUnder10MB();
    }

    // Allow STT uploads (audio) under a dedicated path
    function isAudio() {
      return request.resource != null &&
             request.resource.contentType.matches('audio/.*');
    }
    function isUnder25MB() { return request.resource.size < 25 * 1024 * 1024; }

    match /users/{uid}/stt/{fileId} {
      allow read:  if isOwner(uid);
      allow write: if isOwner(uid) && isAudio() && isUnder25MB();
    }
  }
}
